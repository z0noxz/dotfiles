#!/bin/sh

dmenu_confirm                                       \
    -p "kill:"                                      \
    -nb "#fb2222"                                   \
    -nf "#000000"                                   \
    -sb "#000000"                                   \
    -sf "#fb2222"                                   \
    -w "$(grep < ~/.data/dwm/dwm.log 'dwm: client:' \
        | tail -n 1 | cut -d ' ' -f 3)"             \
    -cmd "echo kill client > /tmp/dwm.fifo"
