#!/bin/sh

args=" -p layouts: -l 20"
options="
    columns
    floating
    grid
    monocle
    tcl
    tiled
"

layout="$(printf "$options"                                                 \
| sed -e '/^$/d' -e 's/^[ \t]*//'                                           \
| sort                                                                      \
| dmenu_vtc${args})"
case "$layout" in
    grid|columns|tiled|floating|monocle|tcl)
        echo "set layout $layout" > "/tmp/dwm.fifo";;
esac
