#!/bin/sh

# Listen for changes forever
while true; do
    ls -d                                   \
        "$HOME"/mail/webmail-*/INBOX/new/       \
        "$HOME"/mail/webmail-*/INBOX/new/*      \
        2>/dev/null | entr -n -r -a -d -p 2>/dev/null echo
    count="$(find "$HOME"/mail/webmail-*/INBOX/new/* 2>/dev/null | wc -l)"
    [ "$count" != "0" ] && ztatusc notify "you have $count new mail(s)"
    ztatusc update mail
done
