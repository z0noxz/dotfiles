#!/bin/sh

ssh-add -D
set -- $(ls ~/.password-store/ssh); for key
do
    pass ssh/$key/passphrase | ssh-add-pass "$HOME/.ssh/keys/.$key.key"     \
    2>&1 >/dev/null && printf '[%s+%s] identity added: %s%s%s\n'            \
        "$(tput setaf 10)"                                                  \
        "$(tput sgr0)"                                                      \
        "$(tput setaf 15)"                                                  \
        "$key"                                                              \
        "$(tput sgr0)"
done
touch "$HOME/.tmp/.ssh-agent-init-done"
