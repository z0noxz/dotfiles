#!/bin/sh

args=" -p power:"
options="
	lock
	logout
	shutdown
	reboot
"

case "$(printf "$options"                                                   \
| sed -e '/^$/d' -e 's/^[ \t]*//'                                           \
| sort                                                                      \
| dmenu_vtc${args})" in
lock)
	/usr/local/bin/slock -m "locked at $(date "+%H:%M:%S";
		echo '------------------';
		fortune /usr/share/fortunes/off/black-humor)"
	;;
logout)
	killall dwm-run;;
shutdown)
	sudo runit-init 0;;
reboot)
	sudo runit-init 6;;
esac
