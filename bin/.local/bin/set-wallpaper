#!/bin/sh

STDIN="$(cat -)"

[ ! -f "$STDIN" ] && exit 1

case "$STDIN" in
*.ff.gz)
    cp "$STDIN" "$HOME/.wallpaper.ff.gz"
    ;;
*.png | *.jpg | *.jpeg | *.gif | *.bmp)
    tmp="$(mktemp)"
    convert "$STDIN" png:- | png2ff | gzip -c > "$tmp" && \
    mv "$tmp" "$HOME/.wallpaper.ff.gz"
    ;;
*)
    exit 1
    ;;
esac

swall "$HOME/.wallpaper.ff.gz"
